.panel.panel-default
  .panel-heading
    %h3
      = @question.title
  .panel-body
    = @question.body
  .panel-footer
    .question-attach
      - if @question.attachments.any?
        - @question.attachments.each do |a|
          %li
            =link_to a.file.file.filename, a.file.url
    =link_to 'To index', questions_path, class:['btn','btn-default']
    -if current_user == @question.user
      .btn-group
        =link_to 'Edit question', edit_question_path(@question), class:['btn','btn-default']
        =link_to 'Delete', @question, method: :delete, data: {confirm: "Are you sure?"}, class:['btn','btn-default']

%h4
  Answers:
.add-answer-form-error
= bootstrap_form_for [@question, @answers], remote: true  do |f|
  = f.text_area :body, label: 'Your answer text:'
  = f.fields_for :attachments do |a|
    = a.file_field :file
  = f.submit 'Add answer'


//=link_to "Add answer", new_question_answer_path(question_id:@question)
.answers
  -@question.answers.each do |answer|
    - if answer.persisted?
      =render 'answer', answer: answer
