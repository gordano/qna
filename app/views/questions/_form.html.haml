= form_for(@question) do |f|
  -if @question.errors.any?
    #errorExplanation
      %h2
        = pluralize(@question.errors.count, "error")
        prohibited
        this question from being saved:
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_field :body
  .actions
    = f.submit
