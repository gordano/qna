<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.form-errors').html('<%= j message%>');
  <% end %>
<% else %>
  $('.answer-box-id-<%= @answer.id %> .answer-body').html('<%= j @answer.body %>');
  $('.answer-box-id-<%= @answer.id %> .edit-answer-link').show();
  $('form#answer-edit-<%= @answer.id %>').hide();
  $('.answer-box-id-<%= @answer.id %>  .attachments-answer').html('<%= j render 'layouts/attachments', attachments: @answer.attachments %>');
  <% if remotipart_submitted? %>
      $('form#answer-edit-<%= @answer.id %>').html("<%= j "#{render 'edit', answer: @answer
    }" %>");
    <% else %>
      $('form#answer-edit-<%= @answer.id %>').html("<%= j render 'edit', answer: @answer %>");
  <% end %>
<% end %>
