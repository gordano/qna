= form_for([@question,@answer]) do |f|
  - if @answer.errors.any?
    #errorExplanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited
        this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field   
    = f.hidden_field :question_id, :value => @question.id
  .actions
    = f.submit